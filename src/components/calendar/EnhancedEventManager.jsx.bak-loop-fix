          if (typeof window !== 'undefined') {
            window._eventUpdateInProgress = false;
          }
        } finally {
          setLoading(false);
        }
      }
    } catch (error) {
      console.error("Error preparing event:", error);
      setError("Failed to save event. Please try again.");
      setLoading(false);

